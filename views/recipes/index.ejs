<%- include("../partials/html-head") %>
  <%- include("../partials/nav") %>

    <section>
      <h1>Recipes: </h1>
        <form action="/recipes/random" method="GET">
          <button class="btn" type="submit">Random Recipe</button>
        </form>
      <% if (user) { %>
        <h2>Add a Recipe That You Enjoy </h2>
        <form action="/recipes" method="POST">
          <label>
            Name:
            <input type="text" name="name" autocomplete="off">
          </label>
              <label>
                Ingredients:
                <input type="text" name="ingredients" autocomplete="off">
              </label>
            <label>
              Instructions:
              <input type="text" name="instructions" autocomplete="off">
            </label>
          <button type="submit">Add </button>
        </form>
        <% } %>
          <h2>All the recipes!</h2>
          <ul>
            <% recipes.forEach(recipe=> { %>
              <li>
                
                <a href="/recipes/<%= recipe._id %>">
                  <%= recipe.name %>
                </a>
              </li>
              <% }) %>
          </ul>
    </section>

    <%- include("../partials/footer") %>