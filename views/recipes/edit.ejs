    <section>
      <h1>Edit <%= recipe.name %> </h1>
      <form action="/Recipes/<%= recipe._id %>?_method=PUT" method="POST">
          <label>
            Name:
            <input type="text" name="name" autocomplete="off">
          </label>
          <label>
            Ingredients:
            <input type="text" name="ingredients" autocomplete="off">
          </label>
          <label>
            Instructions:
            <input type="text" name="instructions" autocomplete="off">
          </label>
    
        <button type="submit">Submit Updates</button>
      </form>
    </section>

